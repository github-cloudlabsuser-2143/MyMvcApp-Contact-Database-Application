@model IEnumerable<MyMvcApp.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "User")
</p>
<form asp-action="Index" method="get" class="search-container d-inline-flex align-items-center">
    <label for="searchName" class="me-2">Find by name:</label>
    <input type="text" id="searchName" name="name" class="form-control me-2" placeholder="Enter name" style="width: auto;" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "User", new { id = item.Id }, null) |
            @Html.ActionLink("Details", "Details", "User", new { id = item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", "User", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>

